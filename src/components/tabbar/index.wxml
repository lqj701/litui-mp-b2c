<view class='tabbar'>

  <view class='tabbar-item' data-page='cards' bindtap='goto'>
    <image class='tabbar-icon' src='/static/icon/card.svg' wx:if='{{!isCards}}'></image>
    <image class='tabbar-icon' src='/static/icon/card-active.svg' wx:if='{{isCards}}'></image>
    <view class='tabbar-text' wx:if='{{!isCards}}'>名片夹</view>
    <view class='tabbar-text-active' wx:if='{{isCards}}'>名片夹</view>
  </view>

  <view class='tabbar-item' data-page='me' bindtap='goto'>
    <image class='tabbar-icon' src='/static/icon/home.svg' wx:if='{{!isMe}}'></image>
    <image class='tabbar-icon' src='/static/icon/home-active.svg' wx:if='{{isMe}}'></image>
    <view class='tabbar-text' wx:if='{{!isMe}}'>我的</view>
    <view class='tabbar-text-active' wx:if='{{isMe}}'>我的</view>
  </view>

</view>
