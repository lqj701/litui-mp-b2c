.tabbar {
  position: fixed;
  z-index: 2;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  display: flex;
  background-color: #fff;
  box-shadow: 0 -1rpx 0 0 rgba(0, 0, 0, 0.10);
}

.tabbar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tabbar-item--active {
  color: #4a8cf2;
}

.tabbar-icon {
  width: 42rpx;
  height: 32rpx;
  margin-bottom: 12rpx;
}

.tabbar-text {
  font-size: 24rpx;
}

.tabbar-text-active {
  font-size: 24rpx;
  color: #4a8cf2;
}
