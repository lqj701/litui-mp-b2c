.topbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 5;
  height: 140rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  box-shadow: inset 0 -1rpx 0 0 #e5e5e5;
}

.topbar-info {
  display: flex;
  align-items: center;
}

.topbar-info-avatar {
  flex-shrink: 0;
}

.topbar-info-content {
  margin-left: 20rpx;
  height: 100rpx;
  overflow: hidden;
}

.name {
  font-size: 30rpx;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.title {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.45);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.topbar-button {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.topbar-button-detail,
.topbar-button-contact {
  width: 146rpx;
  height: 66rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  overflow: visible;
}

.topbar-button-detail::after,
.topbar-button-contact::after {
  border: 0;
}

.topbar-button-detail {
  background-color: #4a8cf2;
}

.topbar-button-detail .icon {
  margin-right: 10rpx;
  width: 40rpx;
  height: 28rpx;
}

.topbar-button-contact {
  background-color: #1aad19;
}

.topbar-button-contact .icon {
  margin-right: 10rpx;
  width: 40rpx;
  height: 32rpx;
}

.topbar-button-contact .text {
  display: flex;
  flex-direction: column;
}

.contactModalContent {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.contactTitle {
  display: none !important;
}

.contactAction {
  display: none !important;
}

.contactModalContent .avatar {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.contactModalContent .contact {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 360rpx;
  height: 70rpx;
  border: 2rpx solid #4A8CF2;
  border-radius: 10rpx;
  color: #4A8CF2;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.contactModalContent .getPhoneNumber {
  background: transparent;
  font-size: 28rpx;
  color: #4A8CF2;
  text-align: center;
  line-height: 1;
}

.contactModalContent .getPhoneNumber::after {
  border: 0
}

.closeContactModal {
  position: absolute;
  right: 0;
  top: 0;
  width: 26rpx;
  height: 26rpx;
  padding: 26rpx;
}