.x-loading {
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

.x-loading .x-loading-child {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.x-loading .x-loading-child:before {
  content: '';
  display: block;
  margin: 0 auto;
  width: 15%;
  height: 15%;
  background-color: #fff;
  border-radius: 100%;
  animation: x-loadingBounceDelay 1.2s infinite ease-in-out both;
}

.x-loading .x-loading2 {
  transform: rotate(30deg);
}

.x-loading .x-loading3 {
  transform: rotate(60deg);
}

.x-loading .x-loading4 {
  transform: rotate(90deg);
}

.x-loading .x-loading5 {
  transform: rotate(120deg);
}

.x-loading .x-loading6 {
  transform: rotate(150deg);
}

.x-loading .x-loading7 {
  transform: rotate(180deg);
}

.x-loading .x-loading8 {
  transform: rotate(210deg);
}

.x-loading .x-loading9 {
  transform: rotate(240deg);
}

.x-loading .x-loading10 {
  transform: rotate(270deg);
}

.x-loading .x-loading11 {
  transform: rotate(300deg);
}

.x-loading .x-loading12 {
  transform: rotate(330deg);
}

.x-loading .x-loading2:before {
  animation-delay: -1.1s;
}

.x-loading .x-loading3:before {
  animation-delay: -1s;
}

.x-loading .x-loading4:before {
  animation-delay: -0.9s;
}

.x-loading .x-loading5:before {
  animation-delay: -0.8s;
}

.x-loading .x-loading6:before {
  animation-delay: -0.7s;
}

.x-loading .x-loading7:before {
  animation-delay: -0.6s;
}

.x-loading .x-loading8:before {
  animation-delay: -0.5s;
}

.x-loading .x-loading9:before {
  animation-delay: -0.4s;
}

.x-loading .x-loading10:before {
  animation-delay: -0.3s;
}

.x-loading .x-loading11:before {
  animation-delay: -0.2s;
}

.x-loading .x-loading12:before {
  animation-delay: -0.1s;
}

@-webkit-keyframes x-loadingBounceDelay {
  0%,
  80%,
  100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

@keyframes x-loadingBounceDelay {
  0%,
  80%,
  100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}