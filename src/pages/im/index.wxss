.window {
  width: 750rpx;
  height: calc(100vh - 100rpx);
}

.input {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 99rpx;
  border-top: 1rpx solid rgba(203, 203, 204, 0.80);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.input-view {
  width: 492rpx;
  background-color: #fdfdfe;
  border: 1rpx solid #b4b6ba;
  border-radius: 8rpx;
  margin-right: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
  float: left;
}

.input-btn {
  width: 136rpx;
  height: 70rpx;
  margin: 0;
  background-color: #f4f4f4;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.85);
}

.input-btn:active {
  background-color: rgba(60, 65, 95, 0);
}

body {
  background: #2d2d2d;
}

/* loading */

.loading-wrapper {
  width: 750rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading {
  padding: 12rpx;
  background: #cfcfcf;
  border-radius: 6rpx;
}

.loading-dot {
  float: left;
  width: 16rpx;
  height: 16rpx;
  margin: 0 8rpx;
  background: #fff;
  border-radius: 50%;
  opacity: 0;
  animation: loadingFade 1s infinite;
}

.loading-dot:nth-child(1) {
  animation-delay: 0s;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.1s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.2s;
}

@keyframes loadingFade {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 0.8;
  }
  100% {
    opacity: 0;
  }
}