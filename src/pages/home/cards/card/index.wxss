.card {
  position: relative;
  width: 670rpx;
  padding-top: 30rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.content {
  position: relative;
  z-index: 1;
  height: 320rpx;
  display: flex;
  justify-content: space-between;
  border-radius: 12rpx;
  background-color: transparent;
  box-shadow: 0rpx 0rpx 32rpx rgba(0, 0, 0, 0.04);
}

.content-mask {
  position: absolute;
  top: 30rpx;
  z-index: 2;
  width: 670rpx;
  height: 320rpx;
  background-color: rgba(0, 0, 0, 0.38);
  color: #fff;
  display: flex;
  font-size: 36rpx;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
}

.content-wrapper {
  padding-top: 48rpx;
  padding-left: 40rpx;
}

.content-name {
  font-size: 40rpx;
  color: #2d3034;
}

.content-info-wrapper {
  height: 204rpx;
}

.content-title,
.content-phone,
.content-company {
  font-size: 28rpx;
  color: #8b97a6;
}

.content-avatar {
  margin: 40rpx;
}

.mask {
  position: absolute;
  z-index: -1;
}

.info {
  height: 33rpx;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.25);
}

.info-message {
  color: rgba(255, 75, 79, 0.65);
}