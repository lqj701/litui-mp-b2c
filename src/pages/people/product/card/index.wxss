.container {
  margin-bottom: 30rpx;
  background-color: #fff;
  box-shadow: inset 0 1rpx 0 0 #e5e5e5, inset 0 -1px 0 0 #e5e5e5;
}

.cover {
  width: 750rpx;
  height: 562.5rpx;
  position: relative;
}

.cover-layer {
  position: absolute;
  z-index: 2;
  width: 750rpx;
  height: 90rpx;
  bottom: 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(0, 0, 0, 0.8);
}

.cover-layer-name {
  font-size: 32rpx;
  color: #fff;
  margin-left: 30rpx;
  flex: 0.95;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cover-layer-price {
  font-size: 36rpx;
  color: #eb0028;
  margin-right: 30rpx;
}

.cover-mask {
  position: absolute;
  opacity: 0.8;
  background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.80) 0%, rgba(0, 0, 0, 0.00) 100%);
}

.content {
  margin-left: 30rpx;
  min-height: 162rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.content-title {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.65);
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.content-like {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.25);
  margin-bottom: 30rpx;
}

.content-like view {
  display: inline;
  margin-left: 20rpx;
}

.text--highlight {
  color: rgba(0, 0, 0, 0.45);
}

.ui-triangle-down {
  position: absolute;
  top: 562.5rpx;
  left: 60rpx;
  width: 0;
  height: 0;
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  border-top: 16rpx solid rgba(0, 0, 0, 0.8);
}