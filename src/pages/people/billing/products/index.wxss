.container {
  width: 750rpx;
  background: #fff;
  margin-top: 30rpx;
}

.items {
  width: 690rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
}

.item-cover {
  margin-right: 30rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 4rpx;
}

.info {
  flex: 1;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}

.info .name {
  font-size: 34rpx;
  margin-bottom: 8rpx;
}

.info .value {
  min-width: 100rpx;
  padding: 4rpx 8rpx;
  margin-bottom: 8rpx;
  background: rgba(0, 0, 0, 0.04);
  border-radius: 4rpx;
  font-size: 28rpx;
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-block {
  flex: 1;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-block .price {
  font-size: 34rpx;
}

.info-block .count {
  font-size: 30rpx;
}

.amount {
  font-size: 34rpx;
  margin: 0 30rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.amount-number {
  color: #ff4b4f;
}

.actualMoney {
  border-top: 1rpx solid #e5e5e5;
  font-size: 34rpx;
  margin: 0 30rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.actualMoney-number {
  color: #ff4b4f;
}

.noproduct {
  width: 750rpx;
  height: 466rpx;
  background: #fff;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.noproduct .icon {
  width: 200rpx;
  height: 140rpx;
  margin-bottom: 26rpx;
}

.noproduct .text {
  font-size: 28rpx;
  color: #B2B2B2;
  margin-bottom: 40rpx;
}

.noproduct .button {
  width: 180rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #4A8CF2;
  border-radius: 4rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}