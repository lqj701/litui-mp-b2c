.container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  width: 750rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.left {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.selectAll {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.selectAll .icon {
  width: 46rpx;
  height: 46rpx;
}

.selectAll .text {
  font-size: 24rpx;
  color: #999999;
}

.amount {
  font-size: 34rpx;
  display: flex;
  flex-direction: row;
}

.amount .price {
  color: #FF4B4F;
}

.billing,
.edit {
  width: 220rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4A8CF2;
  color: #fff;
  font-size: 36rpx;
}

.billing--close,
.edit--close {
  background: rgba(0, 0, 0, 0.30);
}